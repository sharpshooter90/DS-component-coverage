{
  "name": "DS-component-coverage",
  "version": "1.0.0",
  "description": "Design System Component Coverage Analysis Plugin",
  "main": "code.js",
  "scripts": {
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "npm run typecheck:plugin && npm run bundle:plugin",
    "bundle:plugin": "esbuild src/plugin/index.ts --bundle --platform=node --target=es2017 --outfile=code.js",
    "typecheck:plugin": "tsc -p tsconfig.json --noEmit",
    "build:ui": "vite build",
    "dev": "concurrently \"npm run watch:plugin\" \"npm run watch:ui\"",
    "watch:plugin": "esbuild src/plugin/index.ts --bundle --platform=node --target=es2017 --outfile=code.js --watch",
    "watch:ui": "vite build --watch",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix ."
  },
  "author": "",
  "license": "",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^2.0.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
